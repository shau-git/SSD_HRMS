    "/api/auth/register": {
      "post": {
        "summary": "for admin to register a new employee",
        "tags": ["Authentication"],
        "description": "Only admin is allow to visit this route",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "example": "kaneki@company.com"
                },
                "first_name": {
                  "example": "kaneki"
                },
                "last_name": {
                  "example": "ken"
                },
                "hashed_password": {
                  "example": "12345"
                },
                "role": {
                  "example": "W"
                },
                "medical_leave": {
                  "example": 14
                },
                "annual_leave":{
                  "example": 14
                },
                "manager_id": {
                  "example": 3
                }
              }
            }
          }
        ],
        "responses": {
           "201": {
            "description": "Successful response",
            "schema": {
              "type": "object",
              "properties": {
                "employee": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "is_active": { "type": "boolean", "example": true },
                      "created_at": { "type": "string", "example": "2025-08-16T00:31:24.724Z" },
                      "is_new": { "type": "boolean", "example": true },
                      "employee_id": { "type": "integer", "example": 19 },
                      "first_name": { "type": "string", "example": "Kaneki" },
                      "last_name": { "type": "string", "example": "Ken" },
                      "email": { "type": "string", "example": "kaneki@company.com" },
                      "hashed_password": { "type": "string", "example": "$2b$10$ejEoMiIUpRUBWjWa4eZNNuyet3rKhZ8BVC4wnXbyH2Gq6XuWMwhfK" },
                      "role": { "type": "string", "example": "W" },
                      "medical_leave": { "type": "integer", "example": 14 },
                      "annual_leave": { "type": "integer", "example": 14 },
                      "manager_id": { "type": "integer", "example": 3 }
                    }
                  }
                }
              }
            }
          },
          "400": {"description": "user@company.com already exist"},
          "403": { "description": "This side is forbidden" },
          "500": {"description": "Something went wrong, please try again."}
        }
      }
    },
